<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head'); %>
</head>
<body class="container">

<header>
  <%- include('../partials/header'); %>
</header>

</header>

<main>
  <div class="jumbotron">
    <h2>Sign In</h2>
    <form action="/login" method="POST">
      <div>
        <div>
          <label for="username">Username</label>
          <div>
            <input id="username" name="username" placeholder="example@address.com">
          </div>
        </div>
        <div>
          <label for="password">Password</label>
          <div>
            <input type="password" id="password" name="password">
          </div>
        </div>
      </div>
      <button type="submit" class="btn btn-primary" style="margin: 15px;">Sign In</button>
    </form>
  </div>
</main>

<footer>
  <%- include('../partials/footer'); %>
</footer>

</body>
</html>