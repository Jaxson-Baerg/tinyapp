    <meta charset="utf-8" />
    <%- include('../partials/head'); %>
    <title>TinyApp</title>
  </head>
  <header>
    <%- include('../partials/header'); %>
  </header>
  <body class="container">
    <main class="jumbotron">
      <h3 style="display: inline-block;">My URLs</h3>
      <a href="/urls/new" class="btn bg-success" style="float: right;">New URL</a>
      <% if (Object.keys(urlDB).length > 0) { %>
      <table class="table table-dark">
        <thead>
          <tr>
            <th scope="col">Short URL ID</th>
            <th scope="col">Long URL</th>
            <th scope="col">Edit</th>
            <th scope="col">Delete</th>
          </tr>
        </thead>
        <tbody>
          <% for (let id in urlDB) { %>
            <tr>
              <td><a href=<%- urlDB[id] %> name="urlID"><%= id %></a></td>
              <td><%= urlDB[id] %></td>
              <td><form action=<%- `/urls/${id}` %> method="GET"><button type="submit" class="btn btn-primary">Edit</button></form></td>
              <td><form action=<%- `/urls/${id}/delete` %> method="POST"><button type="submit" class="btn btn-danger">Delete</button></form></td>
            </tr>
          <% } %>
        </tbody>
      </table>
      <% } else { %>
      <h5>No Shortened URLs Created Yet!</h5>
      <% } %>
    </main>
