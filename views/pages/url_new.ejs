<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head'); %>
  <title>Tiny App - New URL</title>
</head>
<body class="container">
<!-- <script src=".../express-server.js"></script> -->
<header>
  <%- include('../partials/header'); %>
</header>

<main>
  <div class="jumbotron">
    <h3>Create Tiny URL</h3>
    <form id="newURL" class="form-inline" action="/urls" method="POST">
      <div class="form-group mb-2">
        <label for="longURL">Enter a URL:</label>
        <input
          id="inputNewURL"
          class="form-control"
          type="text"
          name="longURL"
          placeholder="http://..."
          style="width: 300px; margin: 1em"
        />
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </form>
  </div>
</main>

<footer>
  <%- include('../partials/footer'); %>
</footer>

</body>
</html>